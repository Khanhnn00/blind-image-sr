{
    "mode": "sr",
    "use_cl": false,
    "gpu_ids": [1],

    "scale": 4,
    "is_train": true,
    "use_chop": true,
    "rgb_range": 255,
    "self_ensemble": false,
    "save_image": true,

    "datasets": {
        "train": {
            "mode": "LRHR_train",
            "dataroot_HR": "../dataset/result/HR_x4_npy",
            "data_type": "npy",
            "n_workers": 0,
            "batch_size": 48,
            "LR_size": 48,
            "use_flip": true,
            "use_rot": true,
            "noise": ".",
            "phase": "train",
            "scale": 4,
            "kernel_size": 19,
            "rgb_range": 255
        },
        "val_SR": {
            "mode": "LRHR",
            "dataroot_HR": "../SRbenchmark/BSD100",
            "data_type": "img",
            "phase": "test",
            "scale": 4,
            "kernel_size": 19,
            "rgb_range": 255
        },
        "val_kernel": {
            "mode": "LRHR_kernel",
            "dataroot_HR": "../SRbenchmark/BSD100",
            "data_type": "img",
            "phase": "test",
            "scale": 4,
            "kernel_size": 19,
            "rgb_range": 255
        }
    },

    "network": {
        "which_model": "IDK",
        "SR":{
            "num_features": 64,
            "in_channels": 3,
            "out_channels": 3,
            "num_blocks": 16,
            "res_scale": 0.1,
            "upscale_factor": 4
        },
        "KernelExtractor":{
            "in_channels": 3,
            "out_channels": 1,
            "nf": 64,
            "kernel_dim": 512,
            "use_vae": false,
            "norm": "none",
            "use_sharp": false,
            "n_blocks": 4,
            "padding_type": "reflect",
            "use_dropout": false
        },
        "DIP":{
            "input_nc": 8,
            "output_nc": 3,
            "nf": 64,
            "norm": "none",
            "padding_type": "reflect"
        } 
    },

    "num_iters": 1000,
    "reg_noise_std": 0.0001,
    "x_lr": 5e-4,
    "num_warmup_iters": 300,

    "solver": {
        "type": "ADAM",
        "learning_rate": 0.0001,
        "weight_decay": 0,
        "lr_scheme": "MultiStepLR",
        "lr_steps": [200, 400, 600, 800],
        "lr_steps_netG": [200,400, 600, 800],
        "lr_gamma": 0.5,
        "loss_type": "l1",
        "manual_seed": 0,
        "num_epochs": 500,
        "epoch_m1": 300,
        "skip_threshold": 3,
        "split_batch": 2,
        "save_ckp_step": 500,
        "save_vis_step": 1,
        "pretrain_SR": "resume",
        "pretrain_netG": null,
        "netG_only": true,
        "pretrainedSR_path": "./experiments/IDK_in3f64_x4/epochs/SR_last_ckp.pth",
        "pretrainednetG_path": "./experiments/IDK_in3f64_x4/epochs/netG_best_ckp.pth"
    }
}